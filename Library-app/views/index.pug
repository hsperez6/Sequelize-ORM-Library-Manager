extends layout

block content
  h1= title
  a.button(href='./books/new') Create New Book
  form(action="/books", method="post")
    input#search(name='search' type='text' value=search.value placeholder='Search...')
    input(type='submit' value='Search')
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in allBooks
        tr
          td
            a(href=`./books/${book.id}/update`) #{book.title}
          td= book.author 
          td= book.genre 
          td= book.year